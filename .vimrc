" enable syntax highlighting
syntax enable

set mouse=a

" Set Proper Tabs
set tabstop=4
set shiftwidth=4
set smarttab
set expandtab

" always display status line
set laststatus=2

" highlight current line
set cursorline
" vertical ruler
set cursorcolumn

" enable line numbers
" set number

" enable vim indent per default
let g:indent_guides_enable_on_vim_startup = 1

set hlsearch
" Show linenumbers
set ruler
set nobackup
set nowritebackup
set noundofile
let g:spacegray_underline_search = 1
let g:spacegray_italicize_comments = 1
